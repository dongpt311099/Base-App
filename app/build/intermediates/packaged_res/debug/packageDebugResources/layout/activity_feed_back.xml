<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.FeedBackActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/return_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:layout_marginEnd="12dp"
                />
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="31dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="@string/not_satisfied"
            android:textStyle="bold"
            android:textColor="@color/normal_txt"
            android:textSize="16sp"
            android:layout_marginBottom="14dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/op1"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingVertical="12dp"
                android:text="@string/poor_effect"
                android:textColor="@color/selector_optfeed_text"
                android:background="@drawable/selector_optfeed_background"
                android:textAlignment="center"
                android:clickable="true"
                android:focusable="true"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/op2"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingVertical="12dp"
                android:text="@string/bugs"
                android:textColor="@color/selector_optfeed_text"
                android:background="@drawable/selector_optfeed_background"
                android:textAlignment="center"
                android:clickable="true"
                android:focusable="true"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/op3"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingVertical="12dp"
                android:text="@string/face_details"
                android:textColor="@color/selector_optfeed_text"
                android:background="@drawable/selector_optfeed_background"
                android:textAlignment="center"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="31dp"
            >
            <TextView
                android:id="@+id/op4"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingHorizontal="12.83dp"
                android:paddingVertical="12dp"
                android:text="@string/premium"
                android:textColor="@color/selector_optfeed_text"
                android:textAlignment="center"
                android:background="@drawable/selector_optfeed_background"
                android:clickable="true"
                android:focusable="true"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/op5"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingHorizontal="12.83dp"
                android:paddingVertical="12dp"
                android:text="@string/distortion"
                android:textAlignment="center"
                android:textColor="@color/selector_optfeed_text"
                android:background="@drawable/selector_optfeed_background"
                android:clickable="true"
                android:focusable="true"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:background="@drawable/detailfeed_background"
            android:layout_marginHorizontal="16dp"
            android:padding="16dp"
            android:hint="@string/hint_detailed_feedback"
            android:textSize="16sp"
            android:textColor="@color/optfeed_txt"
            android:gravity="start|top"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_sendbtn"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="31dp"
            android:paddingVertical="16dp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            />
    </LinearLayout>
</LinearLayout>