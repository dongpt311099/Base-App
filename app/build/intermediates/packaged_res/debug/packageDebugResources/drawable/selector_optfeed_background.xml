<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/opt_selector"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/optfeed_txt"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>