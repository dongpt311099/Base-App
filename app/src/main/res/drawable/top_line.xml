<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền trắng -->
    <solid android:color="@android:color/white" />

    <!-- Chỉ viền trên -->
    <stroke
        android:width="1dp"
        android:color="#E7E7E7" />

    <!-- Loại bỏ viền dưới, trái, phải bằng cách padding hoặc thêm margin -->
    <padding
        android:top="1dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp" />
</shape>
