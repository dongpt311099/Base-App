<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TimeZoneActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:id="@+id/background"
        android:background="@drawable/background"
        android:gravity="bottom"
        android:paddingHorizontal="16dp"
        android:paddingBottom="22.5dp">
        <ImageView
            android:id="@+id/return_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow"
            android:layout_marginEnd="12dp"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_zone_exchange"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="21dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp">
            <LinearLayout
                android:id="@+id/time_layout"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                android:paddingStart="12dp"
                android:paddingEnd="13dp"
                android:background="@drawable/selector_resetbtn">
                <TextView
                    android:id="@+id/time_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:04"
                    android:textSize="16sp"
                    android:textColor="@color/normal_txt"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clock"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                android:paddingStart="12dp"
                android:paddingEnd="13dp"
                android:background="@drawable/selector_resetbtn">
                <TextView
                    android:id="@+id/date_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sep 27, 2024"
                    android:textSize="16sp"
                    android:textColor="@color/normal_txt"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/background_inputfield">
            <TextView
                android:id="@+id/timez_before_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_txt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/timez_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginVertical="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/background_inputfield"
            android:layout_marginBottom="9dp">
            <TextView
                android:id="@+id/timez_after_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_txt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/timez_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp">
            <TextView
                android:id="@+id/time_after"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/normal_txt"
                android:textStyle="bold"
                android:paddingVertical="14dp"
                android:paddingStart="12dp"
                android:background="@drawable/datetime_background"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/date_after"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/normal_txt"
                android:paddingVertical="14dp"
                android:paddingStart="12dp"
                android:background="@drawable/datetime_background" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/exchange_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:text="@string/exchange"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingVertical="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            />
    </LinearLayout>
</LinearLayout>